<h1>Shop::Homes#edit</h1>
<p>Find me in app/views/shop/homes/edit.html.erb</p>

<%= form_with model: @shop, url: shop_homes_path(@shop), local:true do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :introduction %>
  <%= attachment_image_tag @shop, :shop_image, :fill, 60, 60, fallback: "img/no_image.jpg"%>
  <%= f.attachment_field :shop_image %>
  <%= f.email_field :email %>
  <%= f.text_field :address %>
  <%= f.text_field :phone_number %>
  <%= f.text_field :working_time %>

  <%= f.submit '編集する' %>
<% end %>

<%= link_to '退会する', shop_confirm_path %>