<h1>Shop::Foods#new</h1>
<p>Find me in app/views/shop/foods/new.html.erb</p>

<%= form_with model: @food, url: shop_foods_path(@food), local:true do |f| %>

  <%= f.hidden_field :shop_id, :value => current_shop.id %>

  <%= f.attachment_field :image %>

  <%= f.label :name %>
  <%= f.text_field :name, placeholder: '食べ物名' %>

  <%= f.label :introduction %>
  <%= f.text_area :introduction, placeholder: '食べ物の魅力が伝わる紹介文を書いてください。・こだわった食材や調理法など・おすすめの食べ方など' %>

  <%= f.label :taste %>
  <%= f.select :taste, Food.tastes.keys.to_a %>

  <%= f.label :price %>
  <%= f.text_field :price, placeholder: '1000' %>

  <%= f.label :calorie %>
  <%= f.text_field :calorie, placeholder: '1000　未設定も可' %>

  <%= f.label :food_temperature %>
  <%= f.select :food_temperature, Food.food_temperatures.keys.to_a %>

  <%= f.label :status %>
  <%= f.select :status, Food.statuses.keys.to_a %>

  <%= f.label :sale_dates %>
  <%= f.date_select :sale_dates %>

  <%= f.submit '登録する' %>
<% end %>