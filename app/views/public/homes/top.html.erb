<h2>「コレうま！」お気に入り数ランキング(食べ物)</h2>

<% @food_ranks.each.with_index(1) do |food, i| %>
  <%=  i  %>位
  <%= attachment_image_tag food, :image, :fill, 60, 60 %>
  <%= link_to food.name, food_path(food) %>
  <%= food.status %>
  <%= food.sale_dates %>
  <%= food.favorite_foods.count %>
<% end %>

<% @shop_ranks.each do |shop| %>
  <%= attachment_image_tag shop, :shop_image, :fill, 60, 60, fallback: 'no_image.jpg' %>
  <%= link_to shop.name, shop_path(shop) %>
  <%= shop.favorite_shops.count %>
<% end %>

<div class="row">
  <h2>新着食べ物</h2>
  <div class="card-deck mt-3">
    <%= render 'layouts/food/foods', foods: @foods %>
  </div>
  <%= link_to '食べ物をもっと見る', foods_path %>
</div>

<div class="row">
  <h2>新着お店</h2>
  <div class="card-deck mt-3">
    <%= render 'layouts/shop/shops', shops: @shops %>
  </div>
  <%= link_to 'お店をもっと見る', shops_path %>
</div>
