<p><i class="fas fa-heart"></i> お気に入り/ <%= @food.favorite_foods.count %></p>

<% if user_signed_in? %>
  <% if food.food_favorited_by?(current_user) %>
    <p>
      <%= link_to food_favorite_foods_path(food), method: :delete, remote: true do %>
        <i class="fas fa-heart"></i> いいね
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to food_favorite_foods_path(food), method: :post, remote: true do %>
        <i class="far fa-heart"></i> いいね
      <% end %>
    </p>
  <% end %>
<% end %>
