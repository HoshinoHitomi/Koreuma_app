<!DOCTYPE html>
<html>
  <head>
    <title>Koreuma</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow">
      <div class="container-md">
        <div class="row">
          <div class="col-md-3">
            <h1><%= link_to 'コレうま！', root_path %></h1>

          </div>


          <div class="col-md-9">
            <nav class="navbar navbar-expand-lg">
              <ul class="navbar-nav">
                <%= render 'layouts/header' %>
              </ul>
            </nav>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 offset-md-7 mb-3">
            <%= render 'layouts/search_form' %>
          </div>
        </div>
      </div>
    </header>
    <div class="container-md mt-3">
      <%= yield %>
    </div>

    <footer>
      <%= link_to 'お知らせ', informations_path %>
      <p>©グルメレビューサイト コレうま！</p>
    </footer>
  </body>
</html>
