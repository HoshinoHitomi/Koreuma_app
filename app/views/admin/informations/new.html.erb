<h2>お知らせ投稿</h2>

<%= render 'layouts/error_messages', model: @information %>

<div class="form-horizontal col-md-6 offset-md-3">
  <%= form_with model: @information, url: admin_informations_path(@information), local:true do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'タイトル', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", rows: 5,
       placeholder: 'お知らせ本文を記述してください&#13;&#10;・更新情報&#13;&#10;・伝えたいこと'.html_safe %>
    </div>

    <div class="d-flex align-items-center justify-content-center">
      <%= f.submit '投稿する', class: "btn btn-success" %>
    </div>

  <% end %>
</div>