<h2>お知らせ一覧</h2>

<%= link_to 'お知らせ投稿', new_admin_information_path, class: "btn btn-primary" %>

<div class="row m-3">
  <% if @informations.empty? %>
    <p>お知らせがありません。</p>
  <% else %>
    <table class="table">

      <tr>
        <th>投稿日時</th>
        <th>タイトル</th>
        <th>本文</th>
      </tr>

      <% @informations.each do |information| %>
        <tr>
          <td><%= information.created_at %></td>
          <td><%= link_to information.title, admin_information_path(information) %></td>
          <td><%= information.body.truncate(10) %></td>
        </tr>
      <% end %>

    </table>
  <% end %>
</div>